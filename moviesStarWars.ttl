@prefix : <http://example.org/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix movie: <http://example.org/movies#> .
@prefix sw: <http://example.org/starwars#> .

<http://example.org/ontology> a owl:Ontology .

# Deklarasi Kelas
:Movie a owl:Class .
:Character a owl:Class .
:Actor a owl:Class .
:Director a owl:Class .
:Genre a owl:Class .

# Deklarasi Properti
:starredIn a owl:ObjectProperty ;
    rdfs:domain :Actor ;
    rdfs:range :Movie .

:directedBy a owl:ObjectProperty ;
    rdfs:domain :Movie ;
    rdfs:range :Director .

:hasGenre a owl:ObjectProperty ;
    rdfs:domain :Movie ;
    rdfs:range :Genre .

:hasCharacter a owl:ObjectProperty ;
    rdfs:domain :Movie ;
    rdfs:range :Character .

:hasActor a owl:ObjectProperty ;
    rdfs:domain :Movie ;
    rdfs:range :Actor .

:plays a owl:ObjectProperty ;
    rdfs:domain :Actor ;
    rdfs:range :Character .

:releaseYear a owl:DatatypeProperty ;
    rdfs:domain :Movie ;
    rdfs:range xsd:gYear .

# Deklarasi Individu (Instances)
movie:Sci-Fi a :Genre .

movie:GeorgeLucas a :Director ;
    rdfs:label "George Lucas" .

movie:IrvinKershner a :Director ;
    rdfs:label "Irvin Kershner" .

sw:AnakinSkywalker a :Character ;
    rdfs:label "Anakin Skywalker" .

sw:Padmé a :Character ;
    rdfs:label "Padmé Amidala" .

sw:HanSolo a :Character ;
    rdfs:label "Han Solo" .

sw:LeiaOrgana a :Character ;
    rdfs:label "Leia Organa" .

movie:HaydenChristensen a :Actor ;
    rdfs:label "Hayden Christensen" ;
    :starredIn movie:StarWarsIII ;
    :plays sw:AnakinSkywalker .

movie:NataliePortman a :Actor ;
    rdfs:label "Natalie Portman" ;
    :starredIn movie:StarWarsIII ;
    :plays sw:Padmé .

movie:HarrisonFord a :Actor ;
    rdfs:label "Harrison Ford" ;
    :starredIn movie:StarWarsIV , movie:StarWarsV ;
    :plays sw:HanSolo .

movie:CarrieFisher a :Actor ;
    rdfs:label "Carrie Fisher" ;
    :starredIn movie:StarWarsIV , movie:StarWarsV ;
    :plays sw:LeiaOrgana .

movie:StarWarsIII a :Movie ;
    rdfs:label "Star Wars: Episode III - Revenge of the Sith" ;
    :hasGenre movie:Sci-Fi ;
    :directedBy movie:GeorgeLucas ;
    :hasCharacter sw:AnakinSkywalker , sw:Padmé ;
    :hasActor movie:HaydenChristensen , movie:NataliePortman ;
    :releaseYear "2005"^^xsd:gYear .

movie:StarWarsIV a :Movie ;
    rdfs:label "Star Wars: Episode IV - A New Hope" ;
    :hasGenre movie:Sci-Fi ;
    :directedBy movie:GeorgeLucas ;
    :hasCharacter sw:HanSolo , sw:LeiaOrgana ;
    :hasActor movie:HarrisonFord , movie:CarrieFisher ;
    :releaseYear "1977"^^xsd:gYear .

movie:StarWarsV a :Movie ;
    rdfs:label "Star Wars: Episode V - The Empire Strikes Back" ;
    :hasGenre movie:Sci-Fi ;
    :directedBy movie:IrvinKershner ;
    :hasCharacter sw:HanSolo , sw:LeiaOrgana ;
    :hasActor movie:HarrisonFord , movie:CarrieFisher ;
    :releaseYear "1980"^^xsd:gYear .

# Actor cannot be Director at the same time and vice versa (at least in Star Wars)
:Actor owl:disjointWith :Director .

# Cardinality
## Every Movie needs to have at least 1 Director
:MovieSubClassWithDirector a owl:Class ;
    owl:intersectionOf (
        :Movie
        [ a owl:Restriction ;
          owl:onProperty :directedBy ;
          owl:minCardinality "1"^^xsd:nonNegativeInteger ]
    ) .

